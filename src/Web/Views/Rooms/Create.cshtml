@model RoomInputModel

@{
    ViewData["Title"] = "Add room";
}

<h2>Create</h2>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4 col-12 mx-auto">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" min="0" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" min="0" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<RoomType>()" class="form-control"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdultPrice" class="control-label"></label>
                <input asp-for="AdultPrice" class="form-control" min="0" />
                <span asp-validation-for="AdultPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChildrenPrice" class="control-label"></label>
                <input asp-for="ChildrenPrice" class="form-control" min="0" />
                <span asp-validation-for="ChildrenPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PhotoUpload"></label>
                <input asp-for="@Model.PhotoUpload" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
     @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
     }
}
